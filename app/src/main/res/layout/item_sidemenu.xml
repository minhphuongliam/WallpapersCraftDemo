<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingStart="@dimen/spacing_large"
    android:paddingEnd="@dimen/spacing_large"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"> <!-- Thêm hiệu ứng ripple -->

    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="@dimen/size_normal"
        android:layout_height="@dimen/size_normal"
        android:layout_marginEnd="32dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:id="@+id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_home"/>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/main_white"
        android:textSize="@dimen/text_size_user_statistics"
        android:fontFamily="sans-serif-medium"
        tools:text="Home"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/counter_text_view"
        android:layout_width="@dimen/feed_progress_bar"
        android:layout_height="@dimen/size_normal"
        android:background="@drawable/ic_counter_oval_grey"
        android:gravity="center"
        android:textColor="@color/main_white"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone"
        tools:text="99"
        tools:visibility="visible"/>
</LinearLayout>