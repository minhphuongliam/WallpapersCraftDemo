<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <!-- 1. NỘI DUNG CHÍNH (sẽ được quản lý bởi Navigation Component) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph" />

    <!-- 2. MENU TRƯỢT (sẽ được nhúng tĩnh ở đây) -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/side_menu_container"
        android:name="com.demo.wallpaperscraft.ui.sidemenu.SideMenuFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_side_menu" />

</androidx.drawerlayout.widget.DrawerLayout>